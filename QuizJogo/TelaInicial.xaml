<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizJogo.TelaInicial"
             Shell.NavBarIsVisible="false">


<Grid>
    <Image Source="telajogo.png"
        Aspect="AspectFill"
        HorizontalOptions="Center"
        VerticalOptions="Fill"/>
       

    <VerticalStackLayout
        VerticalOptions="End"
        Spacing="10"
        Margin="15,0,15,40">


    <Button Text="Jogar"
        Clicked="BtnIniciarClicado"
        CornerRadius="25"
        BackgroundColor="#3bbf40"
        TextColor="white"
        FontSize="20"
        Margin="10,0,10,60"
        HorizontalOptions="Fill"/>
    
    </VerticalStackLayout>

</Grid>
</ContentPage>
